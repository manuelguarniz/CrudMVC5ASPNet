@using EntitiesLayer;
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Menu Principal</title>
    <link href="~/Style/Intranet/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Style/Intranet/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
    <link href="~/Style/Intranet/dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/Style/Intranet/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Aministrador Store Flower</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>
                        @{ 
                            EmployeesEL e = (EmployeesEL)Session["empleado"];
                        }
                        @e.nombreEmp.ToUpper() @e.apellidosEmp.ToUpper() 
                        <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> Perfil</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Configuracion</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Cerrar Sessión</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="index.html"><i class="fa fa-dashboard fa-fw"></i> Principal</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-folder-open fa-fw"></i> Mantenedores<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("MaintaineProducts", "Products")"><i class="fa fa-tasks fa-fw"></i> Productos</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("MaintaineCustomers", "Customers")"><i class="fa fa-users fa-fw"></i> Clientes</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("CustomersDown", "Customers")"><i class="fa fa-trash fa-fw"></i> Clientes</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/Style/Intranet/bower_components/jquery/dist/jquery.min.js"></script>

    <script src="~/Style/Intranet/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/Style/Intranet/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <script src="~/Style/Intranet/dist/js/sb-admin-2.js"></script>
    
</body>
</html>
